@{
    Layout = "_Layout";
}

@model Store.Infrastructure.DTO.Product;
<html>
<head>

</head>
<body>

    <div class="container-fluid">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Add New Product</h5>

                    <div class="card">
                        <div class="card-body">
                            <form asp-action="AddNewProduct" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-4">

                                        <label class="form-label">Prodct Name</label>
                                        <input type="text" class="form-control" onkeypress="return onlyText();" asp-for="Name" maxlength="50" required>
                                        <div class="invalid-feedback">Please, Prodct Name!</div>

                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">BriefDescription</label>
                                        <input type="text" class="form-control" asp-for="BriefDescription" required>
                                        <div class="invalid-feedback">Please, BriefDescription!</div>

                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Price</label>
                                        <input type="text" class="form-control" asp-for="Price" required>
                                        <div class="invalid-feedback">Please, Fill Price!</div>


                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">

                                        <label class="form-label">Remark</label>
                                        <input type="text" class="form-control" asp-for="Remark" required>
                                        <div class="invalid-feedback">Please, Fill Remark!</div>

                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"> Quantity</label>
                                        
                                        <input type="text" class="form-control" asp-for="Quantity" required>
                                        <div class="invalid-feedback">Please, Fill Quantity  !</div>

                                    </div>
                                   
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="form-label">Acadimaic Year</label>
                                        <select class="form-select" asp-for="Id" asp-items="@(ViewBag.Acayear = new SelectList(ViewBag.Acayear,"Id","AcaYearcol"))" required>
                                            <option value="">Select an option</option>
                                        </select>
                                        <div class="invalid-feedback">Please, Select Acadimaic Year!</div>

                                    </div>
                                  
                             
                                    <div class="col-md-4">
                                        <label class="form-label">Image</label>
                                        <input type="file" asp-for="IDImage" class="form-control" />
                                    </div>
                                   
                                    <div class="row">
                                        <label class="form-label"></label>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </div>
                                    </div>
                                    </div>
                                    
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</html>

