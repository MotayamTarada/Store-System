@{
    Layout = "_Layout";
    var Id = ViewBag.UserId;
}
@model List<Store.Infrastructure.DTO.Order>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.1/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.0/css/buttons.dataTables.css" />

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.0/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.print.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">
                    View All Orders

                        <span style="float:right; font-size:15px">
                        <a style="border:none; border-radius:5px; background-color:orange; padding:15px; font-size:20px; color:black;" asp-area="" asp-controller="Home" asp-action="Privacy">
                            
                           + Add New Order
                        </a>
                        </span>
                </h5>

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="myTable" class="table table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer ID</th>
                                            <th>ProductId</th>
                                            <th>Total Amount</th>
                                            <th>Quantity</th>
                                            <th>Order Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.OrderId</td>
                                                <td>
                                                    <a asp-controller="Customer" asp-action="GetCustomer" asp-route-id="@item.CustomerId">
                                                        @item.CustomerId
                                                    </a>
                                                </td>
                                                <td>
                                                    <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@item.ProductId">
                                                        @item.ProductId
                                                    </a>
                                                </td>
                                                <td>@item.TotalAmount</td>
                                                <td>
                                                    <form action="@Url.Action("UpdateUser", "Order")" method="post">
                                                        <input type="hidden" name="OrderId" value="@item.OrderId" />
                                                        <input type="hidden" name="CustomerId" value="@item.CustomerId" />
                                                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                                                        <input type="hidden" name="Status" value="@item.Status" />

                                                        <input type="number" value="@item.Quantity" name="Quantity" />
                                                        <button type="submit" class="btn btn-primary mt-2">Update Quantity</button>
                                                    </form>
                                                </td>
                                                <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                                                <td>@item.Status</td>
                                                <td style="font-size:18px">
                                                    
                                                    <a asp-controller="Order" asp-action="DeleteUser" asp-route-id="@item.OrderId" asp-route-cid="@Id">
                                                        <img src="~/assets/img/trash.png" width="28px" height="30px" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- Container for displaying the total amount -->
                                <div id="totalAmount" class="mt-3">
                                    <strong>Total Amount:</strong> NIS  0.00
                                </div>
                                <br />
                                <hr />

@*                                 <button id="confirm" type="button" class="btn btn-warning" data-id="@Id">Confirm Order</button>
 *@
                                <a  style="border:none; border-radius:5px; background-color:orange; padding:15px; font-size:20px; color:black; "  asp-controller="Order" asp-action="GetAllOrderUser" asp-route-id="@Id">تأكيد الطلب </a>

                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            });

            // Function to calculate and display the total amount
            function updateTotalAmount() {
                var totalAmount = 0;
                $('#myTable tbody tr').each(function () {
                    var amount = parseFloat($(this).find('td').eq(3).text().replace('NIS', '').replace(',', '').trim());
                    if (!isNaN(amount)) {
                        totalAmount += amount;
                    }
                });
                $('#totalAmount').html('<strong>Total Amount:</strong> NIS    ' + totalAmount.toFixed(2));
            }

            // Update the total amount after DataTable is initialized
            updateTotalAmount();

            // Optional: Update the total amount on table redraw (e.g., after filtering/sorting)
            table.on('draw', function () {
                updateTotalAmount();
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            // Modal content
            var confirmModal = `
                <div class="modal fade" tabindex="-1" id="confirmModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Order</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    <img src="@Url.Content("~/assets/img/AQU.png")" alt="Logo" width="35px" height="35px">
                                    Dentist Corner Supplies
                                </p>
                                <p>Are you sure you want to confirm this order?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a href="#" id="confirmAction" class="btn btn-warning">Confirm</a>
                            </div>
                        </div>
                    </div>
                </div>`;

            // Append the modal to the body
            $('body').append(confirmModal);

            // Show the modal when the confirm button is clicked
            $('#confirm').click(function () {
                var orderId = $(this).data('id'); // Get the order id from the button's data-id attribute
                var url = `/Order/GetAllOrderUser/${orderId}`; // Construct the URL

                $('#confirmAction').attr('href', url); // Set the confirm button's URL

                $('#confirmModal').modal('show'); // Show the modal
            });
        });
    </script>


    <!-- Confirm button with data-id attribute to pass the order id -->



</body>
</html>


